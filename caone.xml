<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CAone"
    android:background="#E91E63"
    android:backgroundTint="#E91E63"
    >

    <ImageView
        android:id="@+id/imagg"
        android:layout_width="140dp"
        android:layout_height="140dp"
android:layout_marginTop="5dp"
        android:src="@drawable/user"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn"
        android:layout_width="72dp"
        android:layout_height="62dp"
        android:layout_above="@+id/btns"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="214dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="9dp"
        android:gravity="center_horizontal"
        app:backgroundTint="@color/white"
        android:background="@drawable/camera" />

    <LinearLayout
    android:layout_below="@id/imagg"
    android:id="@+id/btns"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="10dp"
    android:background="@drawable/customised_button"
    android:orientation="horizontal">
    <Button
        android:id="@+id/login"
        android:layout_width="150dp"
        android:background="@drawable/customised_button"
        android:backgroundTint="#2196F3"
        android:textSize="19sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:text="Log in"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/signin"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="@drawable/customised_button1"
        android:backgroundTint="@color/white"
        android:text="Sign Up"
        android:textSize="19sp"
        android:textAllCaps="false"
        android:textColor="#717070"
        style="?android:attr/buttonBarButtonStyle" />

</LinearLayout>

    <LinearLayout
        android:id="@+id/socialmedias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btns"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/twitter"
            app:backgroundTint="@color/white" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/fb"
            app:backgroundTint="@color/white"
            />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/gp"
            app:backgroundTint="@color/white"/>
    </LinearLayout>
    <TextView
        android:id="@+id/or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/socialmedias"
        android:text="or"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textColor="#51011D"
        />
    <TextView
        android:id="@+id/unorem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/or"
        android:text="User name / Email address"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:textColor="@color/purple_700"/>
<EditText
    android:id="@+id/email"
    android:layout_below="@id/unorem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#393838"
    android:hint="example@gmail.com"
    android:gravity="center_horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:textSize="20sp"
    android:inputType="textEmailAddress"
    android:textColor="@color/white"
    />
    <TextView
        android:id="@+id/tvpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginTop="10dp"
        android:text="Password"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="@color/purple_700"/>
    <EditText
        android:id="@+id/pwd"
        android:layout_below="@id/tvpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#393838"
        android:hint="password"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp"
        android:inputType="textPassword"
        />
    <CheckBox
        android:id="@+id/cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pwd"
        android:layout_margin="20dp"
        android:text="Remember me"
        android:textSize="20sp"
        android:textColor="#51011D"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cb"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/customised_button"
        android:drawableEnd="@android:drawable/ic_menu_send"
        android:backgroundTint="#2196F3"
        android:text="DONE"
        android:textSize="20sp" />



</RelativeLayout>
